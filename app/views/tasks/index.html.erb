<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
  </thead>
  <tbody>
    <tr>
      <td>
        <ul id="tasks">
          <% @tasks.urgent.important.each do |task| %>
            <%= render task %>
          <% end %>
        </ul>
      </td>
      <td>
        <ul id="tasks">
          <% @tasks.important.where(urgent:false).each do |task| %>
            <%= render task %>
          <% end %>
        </ul>
      </td>
    </tr>
    <tr>
      <td>
        <ul id="tasks">
          <% @tasks.urgent.where(important:false).each do |task| %>
            <%= render task %>
          <% end %>
        </ul>
      </td>
      <td>
        <ul id="tasks">
          <% @tasks.where(urgent:false).where(important:false).each do |task| %>
            <%= render task %>
          <% end %>
        </ul>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to "New task", new_task_path, class: "button" %>
